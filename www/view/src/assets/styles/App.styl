/* global style override */
body
  margin: 0
  padding: 0

pre
  margin: 0;

code
  font-family: SFMono-Regular,Consolas,Liberation Mono,Menlo,monospace;
  font-size: 12px;
  white-space: break-spaces;

/* global style for app */
#root, .root
  a
    color: #3455db;
    text-decoration: none;
    &:hover
      text-decoration: underline;

  .width-auto
    width: auto !important;

  /* style sheet for container */
  .app-root
    height: 100%;
    overflow: hidden;
    position: relative;
    display: flex;
    width: 100%;

  .app-content
    width: 100%;
    height: 100vh;
    overflow: auto;
    position: relative;

  /* css helpers */
  .text-overflow
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;

  /* Code Diff Viewer (Diff Maker Style) */
  .marker-dark
    color: #FFF !important;
  .marker-dark-clickable
    color: #FFF !important;
    cursor: pointer;
#menu-repository, #menu-group
  pointer-events: none;

/* Fix the scrollbar in the drawer */
.MuiDrawer-paper
  overflow-y: hidden !important;